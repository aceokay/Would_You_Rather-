<%= render "layouts/errors", :object => Comment.new %>

<div id="comment-form-area">
  <h2>New Comment</h2>
  <%= form_for [@answer, Comment.new], id: "comment-form", remote:true do |f| %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 4 %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
